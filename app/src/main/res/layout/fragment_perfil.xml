<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PerfilFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/corFundo">

        <TextView
            android:id="@+id/txtHeaderPerfil"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:background="@color/corTextoVerde"
            android:paddingLeft="20dp"
            android:paddingTop="15dp"
            android:text="PERFIL"
            android:textColor="@color/white"
            android:textSize="24sp" />

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignEnd="@+id/txtHeaderPerfil"
            android:paddingTop="5dp"
            android:paddingRight="5dp"
            android:src="@drawable/logoapp" />

        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:id="@+id/imgPerfil"
            android:layout_below="@id/txtHeaderPerfil"
            android:src="@drawable/perfiluser_icon"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="NOME DE USÃšARIO"
            android:id="@+id/txtNomeUsu"
            android:layout_below="@+id/imgPerfil"
            android:textStyle="bold"
            android:textSize="17dp"
            android:gravity="center"/>


    </RelativeLayout>

</FrameLayout>